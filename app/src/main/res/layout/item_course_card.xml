<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/card_background">

    <!-- Course Image -->
    <ImageView
        android:id="@+id/imageCourse"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/course_image"/>

    <!-- Course Text Information -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <!-- Title -->
        <TextView
            android:id="@+id/textCourseTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Title"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Description -->
        <TextView
            android:id="@+id/textCourseDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Short description goes here"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp" />

        <!-- Details -->
        <TextView
            android:id="@+id/textCourseDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123 cal â€¢ 12 min"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp" />
    </LinearLayout>
</LinearLayout>
